source 'https://rubygems.org'

# Rails
gem 'rails', '4.2'

# Database
gem 'mysql2'

# Auth
gem 'devise'

# Javascripts
gem 'therubyracer'
gem 'coffee-rails', '~> 4.1.0'
gem 'jquery-rails'
gem 'jquery-ui-rails'

# Twitter Bootstrap
gem 'sass-rails', '~> 5.0'
gem 'bootstrap-sass'
gem 'font-awesome-sass', '~> 4.2.0'

# Markup
gem 'slim'

# Tools
gem 'uglifier', '>= 1.3.0'
gem 'jbuilder', '~> 2.0'

# File Uploader
gem 'carrierwave', '0.8.0'

# Breadcrumbs
gem 'gretel'

# Editor
gem "wysiwyg-rails"

group :development do
  gem 'puma'
  gem 'better_errors'
  gem 'pry-rails'
  gem 'annotate'
  gem 'mailcatcher'
end

group :development, :test do
  gem 'web-console', '~> 2.0'
  gem 'spring'
end
